{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "lib": ["es6", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
